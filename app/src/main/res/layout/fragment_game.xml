<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.play.PlayFragment">

    <TextView
        android:id="@+id/game_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Look around you and find the"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/word_listen_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="320dp"
        android:height="80dp"
        android:textSize="26sp"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_baseline_volume_up_24"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_message_text_view" />


    <androidx.camera.view.PreviewView
        android:id="@+id/camera_view_finder"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_listen_button" />

    <ImageView
        android:id="@+id/word_image_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:alpha="0.8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/shoes_stencil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_listen_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/previous_img_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="18dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_baseline_navigate_before_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="@id/capture_fab"
        app:layout_constraintEnd_toStartOf="@id/capture_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/capture_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:fabCustomSize="70dp"
        app:maxImageSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/camera_view_finder"
        app:srcCompat="@drawable/ic_baseline_camera_alt_64" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_img_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_baseline_navigate_next_24"
        app:iconGravity="textEnd"
        app:iconPadding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/capture_fab"
        app:layout_constraintStart_toEndOf="@id/capture_fab" />

</androidx.constraintlayout.widget.ConstraintLayout>


